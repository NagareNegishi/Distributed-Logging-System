<?xml version="1.0" encoding="UTF-8"?>
<!-- jetty version in this project is 11.0.24, which makes Servlet version 5.0-->
<!-- https://jetty.org/download.html -->
<!-- Which is Jakarta EE 9 -->
<!-- https://jakarta.ee/specifications/servlet/5.0/ -->
<!-- and web-app for Jakarta EE 9 is web-app_5_0.xsd-->
<!-- https://jakarta.ee/xml/ns/jakartaee/ -->
<!-- https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd -->
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                             https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">
    <!-- task 1: LogsServlet -->
    <servlet>
        <servlet-name>LogsServlet</servlet-name>
        <servlet-class>
            io.github.nagare.logging.server.LogsServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogsServlet</servlet-name>
        <url-pattern>/logs</url-pattern>
    </servlet-mapping>

    <!-- task 3: StatsCSVServlet -->
    <servlet>
        <servlet-name>StatsCSVServlet</servlet-name>
        <servlet-class>
            io.github.nagare.logging.server.StatsCSVServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatsCSVServlet</servlet-name>
        <url-pattern>/stats/csv</url-pattern>
    </servlet-mapping>

    <!-- task 3: StatsHTMLServlet -->
    <servlet>
        <servlet-name>StatsHTMLServlet</servlet-name>
        <servlet-class>
            io.github.nagare.logging.server.StatsHTMLServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatsHTMLServlet</servlet-name>
        <url-pattern>/stats/html</url-pattern>
    </servlet-mapping>

    <!-- task 3: StatsExcelServlet -->
    <servlet>
        <servlet-name>StatsExcelServlet</servlet-name>
        <servlet-class>
            io.github.nagare.logging.server.StatsExcelServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatsExcelServlet</servlet-name>
        <url-pattern>/stats/excel</url-pattern>
    </servlet-mapping>
</web-app>